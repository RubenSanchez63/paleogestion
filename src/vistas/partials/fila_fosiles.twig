{% for fosil in fosiles %}
    <tr class="fosRow{{ fosil.idFos }} table-row-hover transition-all duration-300">
        <td class="px-4 py-3">
            <span class="inline-flex items-center justify-center w-6 h-6 rounded-md bg-fossil-800/50 text-fossil-400 text-xs font-mono">
                {{ fosil.idFos }}
            </span>
        </td>
        <td class="px-4 py-3">
            <span class="flex items-center gap-2 text-fossil-200 font-medium">
                <svg class="w-4 h-4 text-fossil-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                {{ fosil.parte }}
            </span>
        </td>
        <td class="px-4 py-3 text-fossil-400 text-sm font-mono">{{ fosil.fechaFos }}</td>
        <td class="px-4 py-3">
            {% if fosil.estadoFos == 'Bajo Estudio' %}
                <span class="status-badge status-estudio">üî¨ {{ fosil.estadoFos }}</span>
            {% elseif fosil.estadoFos == 'En Exposici√≥n' %}
                <span class="status-badge status-exposicion">üèõÔ∏è {{ fosil.estadoFos }}</span>
            {% else %}
                <span class="status-badge status-almacen">üì¶ {{ fosil.estadoFos }}</span>
            {% endif %}
        </td>
        {% if sesionActiva %}
        <td class="px-4 py-3">
            <div class="flex gap-1.5">
                <a id="borrarFosil{{ fosil.idFos }}" onclick="borrarFosil({{ fosil.idFos }}, {{ fosil.idEsq }});"
                    class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-red-500/20 text-red-300 hover:bg-red-500/40 text-xs font-medium transition-all cursor-pointer">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                    Borrar
                </a>
                <a id="editarFosil{{ fosil.idFos }}" onclick="editarFosil({{ fosil.idFos }}); return false;"
                    class="inline-flex items-center gap-1 px-2 py-1 rounded-md bg-fossil-500/20 text-fossil-300 hover:bg-fossil-500/40 text-xs font-medium transition-all cursor-pointer">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Editar
                </a>
            </div>
        </td>
        {% endif %}
    </tr>
{% endfor %}
